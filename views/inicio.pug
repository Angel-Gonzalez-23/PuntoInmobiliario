extends layout/app
block styles 
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block contenido
    div(class="py-5")
        h1(class="text-center text-4xl font-extrabold mt-5 py-5") Ubicaci√≥n en el Mapa
        
        div(class="flex flex-col md:flex-row items-center py-10 gap-4")
            h2(class="text-sm uppercase text-gray-800 font-bold") Filtrar:
            div(class="w-full md:w-auto flex items-center gap-2")
                label(for="categorias" class="text-sm w-24 uppercase text-black font-bold") Categorias
                select(id="categorias" class="flex-1 bg-white w-full px-3 py-2 border border-gray-300 rounded-md shadow")  
                    option(value="") -Selecciones-
                    each categoria in categorias 
                        option(value=categoria.id)= categoria.nombre 

            div(class="w-full md:w-auto flex items-center gap-2")
                label(for="precios" class="text-sm w-24 uppercase text-black font-bold") Precios
                select(id="precios" class="flex-1 bg-white w-full px-3 py-2 border border-gray-300 rounded-md shadow")  
                    option(value="") -Selecciones-
                    each precio in precios 
                        option(value=precio.id)= precio.precio  

        div(id="mapa-inicio" class="h-[600px]")

        section(class="py-5")
            h2(class="text-center text-4xl font-bold pt-10") Casas en Venta
            div(class="grid grid-cols-1 lg:grid-cols-3 gap-5 mt-10")
                each propiedad in casas 
                    include ./templates/card

        section(class="py-5")
            h2(class="text-center text-4xl font-bold pt-10") Departamentos en Venta
            div(class="grid grid-cols-1 lg:grid-cols-3 gap-5 mt-10")
                each propiedad in departamentos 
                    include ./templates/card
block scripts 
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="/js/mapaInicio.js")