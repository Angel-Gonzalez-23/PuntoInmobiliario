extends ../layout/admin
block contenido
    .py-10 
        h1.text-4xl.my-4.font-extrabold.text-center Punto
            span.font-normal Inmobiliario
        h2.text-center.text-2xl.font-extrabold= pagina 
        
        a(href="/propiedades/crear" class="rounded-md py-2 px-10 bg-indigo-600 hover:bg-indigo-700 font-bold text-center text-white uppercase my-6 inline-block w-full md:w-auto") Nueva Propiedad 

        //- pre= JSON.stringify(propiedades, undefined, 1)
        if propiedades.length 
            div(class="bg-white shadow rounded-lg")
                ul(class="divide-y divide-gray-200")
                    each propiedad in propiedades 
                        li 
                            div(class="p-6 w-full flex flex-col sm:flex-row sm:items-center sm:justify-between space-y-8 md:space-y-0 gap-4")
                                div(class="sm:w-1/4 md:w-1/6")
                                    img(src=`uploads/${propiedad.imagen}` alt=`Imagen de propiedad ${propiedad.titulo}` class="w-full block")

                                div(class="sm:w-2/4 md:w-3/6 lg:w-4/6 space-y-3") 
                                    a(class="mb-4 text-3xl font-extrabold leading-none tracking-tight text-gray-900 md:text-4xl truncate" href="#")=propiedad.titulo 
                                    p(class="text-sm text-black")
                                    p(class="text-sm text-gray-400 flex items-center")
                                        svg(xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6")
                                            path(stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m-3-2.818.879.659c1.171.879 3.07.879 4.242 0 1.172-.879 1.172-2.303 0-3.182C13.536 12.219 12.768 12 12 12c-.725 0-1.45-.22-2.003-.659-1.106-.879-1.106-2.303 0-3.182s2.9-.879 4.006 0l.415.33M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z")
                                        =propiedad.precio.precio 

                                div(class="sm:w-1/4 md:w-2/6 lg:w-1/6 lg:flex-1 flex flex-col gap-2 lg:flex-row") 
                                    form(action="#")
                                        input(type="submit" class=`w-full px-2 py-2 md:py-1 text-xs leading-5 font-semibold rounded cursor-pointer ${propiedad.publicado ? 'text-green-800 bg-green-100 ' : 'text-yellow-800 bg-yellow-100 '}' ` value= `${propiedad.publicado ? 'Publicado' : 'No publicado'}`) 
                                    a(href=`/propiedades/editar/${propiedad.id}` class="text-center px-2 py-2 md:py-1 text-xs leading-5 font-semibold rounded cursor-pointer  bg-indigo-100 text-indigo-800") Editar 
                                    form(action=`/propiedades/eliminar/${propiedad.id}` method="POST")
                                        input(type="hidden" name="_csrf" value= csrfToken)
                                        input(type="submit" class="w-full px-2 py-2 md:py-1 text-xs leading-5 font-semibold rounded cursor-pointer bg-red-100 text-red-800" value="Eliminar")
        else 
            p.text-center No hay propiedades