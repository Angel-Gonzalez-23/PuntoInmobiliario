extends ../layout/admin
block contenido
    h2(class="text-2xl font-extrabold text-center my-10")=pagina
    a(href="/mis-propiedades" class="rounded-md py-2 px-10 bg-indigo-600 hover:bg-indigo-700 font-bold text-center text-white uppercase my-6 inline-block w-full md:w-auto") Regresar
    //- pre=JSON.stringify(mensajes, undefined, 2)

    div(class="mx-auto max-w-4xl bg-white shadow")
        if mensajes.length 
            ul 
                each mensaje in mensajes 
                    li(class="border-gray-300 border-b p-5")
                        p(class="font-bold text-gray-700") Nombre: 
                            span(class="font-normal")=mensaje.usuario.nombre
                        p(class="font-bold text-gray-700") Correo: 
                            span(class="font-normal")=mensaje.usuario.email
                        p(class="font-bold text-gray-700") Mensaje: 
                            span(class="font-normal")=mensaje.mensaje
                        p(class="font-bold text-gray-700") Rebicido: 
                            span(class="font-normal")= formatearFecha(mensaje.createdAt)
        else 
            p(class="text-center p-3")  no hay mensajes